Функция НайтиПодстроки(Шаблон, Текст)

	RegExp = Новый COMОбъект("VBScript.RegExp");
	
	//Поиск всех вхождений шаблона	
	RegExp.Global = Ложь;	

	//Игнорировать регистр символов
	RegExp.IgnoreCase = Истина; 
	
	//Многострочный режим	
	RegExp.MultiLine = Истина; 
	RegExp.Pattern = Шаблон;
	Matches = RegExp.Execute(Текст);
	МассивЗначений = Новый Массив();
	
	Для каждого StrMatches Из Matches Цикл		
		МассивЗначений.Добавить(StrMatches.Value);		
	КонецЦикла;
	
	Возврат МассивЗначений[0];
	
КонецФункции 

Процедура СоздатьЗадачуПоТеме(Запись, Тема)
	Задача = Задачи.ЗадачаОбработкаОшибокОтказов.СоздатьЗадачу();
	Задача.Рассылка = Запись.Рассылка;
	Задача.Контрагент = Запись.Контрагент;
	Задача.СегментКонтрагентов = Запись.Рассылка.Получатели;
	Задача.Наименование = Тема;
	Задача.Дата = Дата(ТекущаяДата());
	Задача.Записать();
КонецПроцедуры